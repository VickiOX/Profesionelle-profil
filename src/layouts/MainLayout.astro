---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import '../styles/tailwind.css';
import 'animate.css';
const { title } = Astro.props;
---
<html lang="da">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/dot_protræt.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{Astro.props.title}</title>
		 
	</head>
	<body class="bg-blue-100"> 

		<header class=" mx-[20px] md:mx-[40px] lg:mx-[80px]">
			<Header></Header>
		</header>
		 
		<main class="mx-[20px] md:mx-[40px] lg:mx-[80px]">
			<slot />
		</main>
		<footer class=" ">
			<Footer></Footer>  <!-- Animation på smiley -->
		</footer>
	</body>
</html>