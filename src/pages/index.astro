	<Projects></Projects>
	<Learn></Learn>  
	</article>
</MainLayout>


<script>

    import { inView } from "motion";
    
    //fadeIn
    
    const fadeInp1 = document.querySelector(".fadeInp1");
    
    inView(fadeInp1, () => {
    
        fadeInp1.classList.add("animate__animated", "animate__fadeIn", "animate__delay-1s");
    
    }); 
    
    const fadeInp2 = document.querySelector(".fadeInp2");
    
    inView(fadeInp2, () => {
    
        fadeInp2.classList.add("animate__animated", "animate__fadeIn", "animate__delay-1s");
    
    }); 
    
    const fadeInp3 = document.querySelector(".fadeInp3");
    
    inView(fadeInp3, () => {
    
        fadeInp3.classList.add("animate__animated", "animate__fadeIn", "animate__delay-1s");
    
    }); 
    
    const fadeInp4 = document.querySelector(".fadeInp4");
    
    inView(fadeInp4, () => {
    
        fadeInp4.classList.add("animate__animated", "animate__fadeIn", "animate__delay-1s");
    
