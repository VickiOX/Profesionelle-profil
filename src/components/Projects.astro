   animate("#horisontalliste2", {
     transform: ["none", `translateX(-${items2.length - 1}00vw)`]
   }),
   { target: document.querySelector("#horisontalscrollsection2") }
 ); 

 scroll(
   animate("#horisontalliste3", {
     transform: ["none", `translateX(-${items3.length - 1}00vw)`]
