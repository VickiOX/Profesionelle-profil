        <div class="z-50 absolute  w-[400px] top-[180px] left-[10px] md:w-[520px] md:left-[200px] lg:w-[580px] lg:left-[400px] xl:left-[670px] xl:w-[620px] 2xl:w-[740px] 2xl:top-[110px] hover:scale-110 duration-300">
            <img src={img7}>
        </div>
     

        <div class="z-40 absolute  w-[370px] top-[20px] md:left-[230px]  md:w-[500px] lg:w-[580px] xl:left-[500px] 2xl:left-[660px] hover:scale-110 duration-300">
            <img src={img8}>
        </div>
