const right = dir ==="right" ? "right-0" : "left-0";

const mdRight = mdDir === "mdRight" ? "md:ml-[300px]" : "md:mr-[200px]";

const lgRight = lgDir === "lgRight" ? "lg:ml-[500px]" : "lg:mr-[350px]";

const xlRight = xlDir === "xlRight" ? "xl:ml-[680px]" : "xl:mr-[540px]";

---

<div>
    <div class="transparrent_wrapper relative h-[600px]"> 
        <div class="bilede_1 z-50 absolute w-[300px] left-[100px] xl:w-[500px] md:w-[400px] lg:w-[500px] xl:top-[-10px] hover:scale-110 duration-300 ">
            <img src={img1}>
        </div>

        <div class="bilede_2 z-50 absolute  w-[180px] top-[260px] left-[10px] xl:w-[260px] lg:w-[220px] hover:scale-110 duration-300">
