<script>
/* Import af Motion One bibliotek */
import { animate, stagger, inView, scroll, timeline } from "motion";

const items1 = document.querySelectorAll("#horisontalliste1 li");
const items2 = document.querySelectorAll("#horisontalliste2 li");
const items3 = document.querySelectorAll("#horisontalliste3 li");

scroll(
   animate("#horisontalliste1", {
     transform: ["none", `translateX(-${items1.length - 1}00vw)`]
   }),
   { target: document.querySelector("#horisontalscrollsection1") }
 ); 

